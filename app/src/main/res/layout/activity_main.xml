<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaleem.aboutaustrailia.MainActivity">


    <ScrollView
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/main"
            app:layout_constraintLeft_toLeftOf="@+id/main"
            app:layout_constraintRight_toRightOf="@+id/main"
            app:layout_constraintTop_toTopOf="@+id/main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:orientation="horizontal">

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="btnHomeClick"
                    android:fontFamily="@font/sanomat_medium"
                    android:background="@drawable/login_button"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:text="Home" />

                <View
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="btnCitiesClick"
                    android:text="Cities"
                    android:fontFamily="@font/sanomat_medium"
                    android:background="@drawable/login_button"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />

                <View
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="btnEvent"
                    android:text="Events"
                    android:fontFamily="@font/sanomat_medium"
                    android:background="@drawable/login_button"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />

                <View
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="btnExit"
                    android:text="Logout"
                    android:fontFamily="@font/sanomat_medium"
                    android:background="@drawable/login_button"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sanomat_medium"
                android:gravity="center"
                android:text="Welcome to Australia"
                android:textColor="@color/text_hint_color"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/aus" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sanomat_regular"
                android:gravity="center"
                android:text="We welcome VU students to Australia. This application will provide information about popular events in Melbourne and Sydney events to both Melbourne and Sydney campus students. "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sanomat_medium"
                android:gravity="center"
                android:text="Culture"
                android:textColor="@color/text_hint_color"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/australia_culture" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sanomat_regular"
                android:gravity="center"
                android:text="Australia is also a multicultural society which has been enriched by over six million settlers from almost 200 nations. Four out of ten Australians are migrants or the first-generation children of migrants, half of them from non-English speaking backgrounds."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sanomat_medium"
                android:gravity="center"
                android:text="Students Life"
                android:textColor="@color/text_hint_color"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/population" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sanomat_regular"
                android:gravity="center"
                android:text="We encourage our students to participate in different social events happening around!!!" />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp" />
