<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaleem.aboutaustrailia.CitiesActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Home"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/sanomat_medium"
                android:background="@drawable/login_button"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:onClick="btnHomeClick"/>

            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Cities"
                android:fontFamily="@font/sanomat_medium"
                android:background="@drawable/login_button"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:onClick="btnCitiesClick"/>

            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Events"
                android:fontFamily="@font/sanomat_medium"
                android:background="@drawable/login_button"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:onClick="btnEvent"/>

            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Exit"
                android:fontFamily="@font/sanomat_medium"
                android:background="@drawable/login_button"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:onClick="btnExit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="#e8e8e8"
                android:onClick="sydneyClicked">
                <ImageView
                    android:id="@+id/sydImage"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:src="@drawable/syd"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/sydImage"
                    android:layout_alignTop="@id/sydImage"
                    android:layout_alignRight="@id/sydImage"
                    android:layout_alignBottom="@id/sydImage"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="SYDNEY"
                    android:fontFamily="@font/sanomat_bold"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sydImage"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/sanomat_regular"
                    android:text="Sydney, capital of New South Wales and one of Australia's largest cities, is best known for its harbourfront Sydney Opera House, with a distinctive sail-like design. Massive Darling Harbour and the smaller Circular Quay port are hubs of waterside life, with the arched Harbour Bridge and esteemed Royal Botanic Garden nearby. Sydney Tower’s outdoor platform, the Skywalk, offers 360-degree views of the city and suburbs."
                    android:gravity="left"
                    android:textSize="12sp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="#e8e8e8"
                android:onClick="melbourneClicked">
                <ImageView
                    android:id="@+id/melImage"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:src="@drawable/melbourne"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/myImageView2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/melImage"
                    android:layout_alignTop="@id/melImage"
                    android:layout_alignRight="@id/melImage"
                    android:layout_alignBottom="@id/melImage"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Melbourne"
                    android:fontFamily="@font/sanomat_bold"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/melImage"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/sanomat_regular"
                    android:text="Melbourne is the coastal capital of the southeastern Australian state of Victoria. At the city's centre is the modern Federation Square development, with plazas, bars, and restaurants by the Yarra River. In the Southbank area, the Melbourne Arts Precinct is the site of Arts Centre Melbourne – a performing arts complex – and the National Gallery of Victoria, with Australian and indigenous art."
                    android:textSize="12sp"
                    android:gravity="left"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
