<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaleem.aboutaustrailia.ActivityAllUsers">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/main"
            app:layout_constraintLeft_toLeftOf="@+id/main"
            app:layout_constraintRight_toRightOf="@+id/main"
            app:layout_constraintTop_toTopOf="@+id/main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:fontFamily="@font/sanomat_medium"
                    android:background="@drawable/login_button"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:onClick="btnHomeClick"
                    android:text="Home" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="btnCitiesClick"
                    android:text="Cities"
                    android:fontFamily="@font/sanomat_medium"
                    android:background="@drawable/login_button"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="btnEvent"
                    android:text="Events"
                    android:fontFamily="@font/sanomat_medium"
                    android:background="@drawable/login_button"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="btnExit"
                    android:text="Exit"
                    android:fontFamily="@font/sanomat_medium"
                    android:background="@drawable/login_button"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Users List"
                android:fontFamily="@font/sanomat_medium"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tvUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="10dp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
