<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaleem.aboutaustrailia.ActivityEvents">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Home"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/sanomat_medium"
                android:background="@drawable/login_button"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:onClick="btnHomeClick"/>

            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Cities"
                android:fontFamily="@font/sanomat_medium"
                android:background="@drawable/login_button"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:onClick="btnCitiesClick"/>

            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Events"
                android:fontFamily="@font/sanomat_medium"
                android:background="@drawable/login_button"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:onClick="btnEvent"/>

            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Exit"
                android:fontFamily="@font/sanomat_medium"
                android:background="@drawable/login_button"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:onClick="btnExit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imSydneyDT"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/moomba"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tvSydneyDT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moomba is held annually in Melbourne, Australia. Run by the City of Melbourne, it is Australia's largest free community festival, and a Melbournian tradition dating back half a century. The event is celebrated over four days, incorporating the Labour Day long weekend, from Friday to the second Monday in March."
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8"/>

                <TextView
                    android:id="@+id/tvSydneyT"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Begins:	  08 Mar 2019\nEnds:   	11 Mar 2019"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:gravity="center_vertical">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Moomba"
                        android:layout_marginLeft="5dp"
                        android:onClick="btnMoomba"
                        android:fontFamily="@font/sanomat_medium"
                        android:background="@drawable/event_button"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"/>
                    <View
                        android:layout_width="7dp"
                        android:layout_height="match_parent"
                        android:background="#fff" />
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Melbourne Cup"
                        android:onClick="btnMelbCup"
                        android:fontFamily="@font/sanomat_medium"
                        android:background="@drawable/event_button"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"/>
                    <View
                        android:layout_width="7dp"
                        android:layout_height="match_parent"
                        android:background="#fff" />
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Vivid Sydney"
                        android:onClick="btnVivid"
                        android:fontFamily="@font/sanomat_medium"
                        android:background="@drawable/event_button"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"/>
                    <View
                        android:layout_width="7dp"
                        android:layout_height="match_parent"
                        android:background="#fff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="New Year Eve"
                        android:onClick="btnNewEve"
                        android:fontFamily="@font/sanomat_medium"
                        android:background="@drawable/event_button"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
